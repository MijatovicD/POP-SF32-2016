<Window x:Class="POP_SF_32_2016_GUI.UI.NamestajWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_32_2016_GUI.UI"
        mc:Ignorable="d"
        Title="NamestajWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Border Background="AliceBlue">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListBox Grid.Row="0" FontSize="20" Name="lbNamestaj" Grid.Column="1"/>
            <Button Content="Dodaj" Margin="0,0,0,232" Click="DodajNamestaj_Click"/>
            <Button Content="Izmeni" Margin="0,42,0,190" Click="IzmeniNamestaj_Click"/>
            <Button Content="Izbrisi" Margin="0,130,0,102" Click="ObrsiNamestaj_Click"/>
            <Button Content="Izadji" Margin="0,185,0,47" Click="Zatvori_Click"/>
        </Grid>
    </Border>
</Window>
