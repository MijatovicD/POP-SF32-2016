<Window x:Class="POP_SF_32_2016_GUI.UI.KorisnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_32_2016_GUI.UI"
        mc:Ignorable="d"
        Title="KorisnikWindow" Height="570" Width="770" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="406*"/>
                <RowDefinition Height="127*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" FontSize="20" Name="dgKorisnik" SelectedItem="{Binding Path=IzabraniKorisnik}"/>
            <Button Grid.Row="1" Content="Dodaj" Height="40" Width="80" Margin="10,48,668,39" Click="DodajKorisnika"/>
            <Button Grid.Row="1" Content="Izmeni" Height="40" Width="80" Click="IzmeniKorisnika" Margin="132,51,550,37"/>
            <Button Grid.Row="1" Content="Izbrisi" Height="40" Width="80" Click="Izbrisi" Margin="279,53,403,35"/>
            <Button Grid.Row="1" Content="Izadji" Height="40" Width="80" Margin="601,49,91,39" Click="Zatvori"/>
            <TextBox x:Name="tbPretraga" HorizontalAlignment="Left" Height="42" Margin="410,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" TextChanged="tbPretraga_TextChanged" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
